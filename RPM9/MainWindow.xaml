<Window x:Class="RPM9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPM9"
        mc:Ignorable="d"
        Title="Коллекции" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,10,10,10">
            <Button x:Name="btnAbout" Content="О программе" Margin="0,0,10,0"/>
            <Button x:Name="btnExit" Content="Выход" Margin="10,0,0,0"/>
        </StackPanel>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2"/>
        <GroupBox Header="Работа с массивом" Grid.Row="1">
            <StackPanel>
                <Label Content="Количество значений в массиве" Margin="0,0,0,10"/>
                <TextBox TextWrapping="Wrap" Width="200" Margin="0,0,0,5"/>
                <Button Content="Button" Width="200" Margin="0,0,0,5"/>
                <Button Content="Button" Width="200" Margin="0,0,0,5"/>
                <Button Content="Button" Width="200" Margin="0,0,0,5"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Расчет по заданию" Grid.Row="1">
            <StackPanel>
                <Label Content="Расчитать количетсво отцательных чисел" Margin="0,0,0,10"/>
                <TextBox TextWrapping="Wrap" Width="200" IsReadOnly="True" Margin="0,0,0,5"/>
                <Button Content="Button" Width="200"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
